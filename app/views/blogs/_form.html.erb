<%= form_with(model: blog, local: true, html: {:multipart => true}) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :blog_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published, id: :blog_published, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :blog_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :blog_content, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
