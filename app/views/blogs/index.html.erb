<div class="row">
  <div class="col-md-12">
    <div class="index_header">
      <h1>Blogs</h1>
    </div>
    <table class="table">
      <tbody>
        <% @blogs.each do |blog| %>
          <% next if not (blog.published or logged_in?) %>
          <tr>
            <td><%= link_to blog.name, blog_path(blog) %></td>
            <td><%= link_to blog.description.html_safe, blog_path(blog) %></td>
            <% if logged_in? %>
            <td class="index_action_td"><span class="glyphicon glyphicon-eye-<%= blog.published ? "open" : "close" %>"></span></td>
            <td class="index_action_td"><%= link_to '', edit_blog_path(blog), class: "glyphicon glyphicon-pencil" %></td>
            <td class="index_action_td"><%= link_to '', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if logged_in? %>
    <%= link_to 'Neuer Blog', new_blog_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
