<%= form_with(model: gardening, local: true, html: {:multipart => true}) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :gardening_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published, id: :gardening_published, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><div data-tooltip-content="#markdown-info" class="glyphicon glyphicon-info-sign markdown-tooltip"></div>
    <%= form.text_area :description, id: :gardening_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %><div data-tooltip-content="#markdown-info" class="glyphicon glyphicon-info-sign markdown-tooltip"></div>
    <%= form.text_area :content, id: :gardening_content, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
