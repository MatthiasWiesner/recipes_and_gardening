<div class="row">
  <div class="col-md-12 show_header">
    <h1>
      <%= @gardening.name %>
      <% if logged_in? %>
      <span class="show_actions">
        <%= link_to '', edit_gardening_path(@gardening), class: "glyphicon glyphicon-pencil" %>
        <%= link_to '', @gardening, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %>
      </span>
      <% end %>
    </h1>
  </div>
</div>
<div class="row">
  <% if @gardening.pictures.any? %>
  <div class="col-md-3 hidden-xs hidden-sm">
    <% @gardening.pictures.each do |p| %>
    <div class="show_picture">
      <%= link_to image_tag(picture_path(p.id, size: "small")), picture_path(p.id), local: true, data: {lightbox: "image_group", title: ""} %>
    </div>
    <% end %>
  </div>
  <div class="col-md-3 visible-xs visible-sm show_small_pics">
    <% @gardening.pictures.each do |p| %>
      <div class="show_small_picture">
        <%= link_to image_tag(picture_path(p.id, size: "thumbnail")), picture_path(p.id, size: 'small'), local: true, data: {lightbox: "image_group_small", title: ""} %>
      </div>
    <% end %> 
  </div>
  <div class="col-md-9">
  <% else %>
  <div class="col-md-12">
  <% end %>
    <% if @gardening.description.present? %>
    <div class="show_description">
      <%= @gardening.description.html_safe %>
    </div>
    <% end %>
    <div class="show_content">
      <h1>Zubereitung</h1>
      <%= @gardening.content.html_safe %>
    </div>
    <% if @related.present? %>
    <div class="show_related">
      <h1>Verwandte Links</h1>
      <%= @related.html_safe %>
    </div>
    <% end %>
  </div>
</div>
