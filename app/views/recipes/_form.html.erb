<%= form_with(model: recipe, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :recipe_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published, id: :recipe_published, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><div data-tooltip-content="#markdown-info" class="glyphicon glyphicon-info-sign markdown-tooltip"></div>
    <%= form.text_area :description, id: :recipe_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients %><div data-tooltip-content="#markdown-info" class="glyphicon glyphicon-info-sign markdown-tooltip"></div>
    <%= form.text_area :ingredients, id: :recipe_ingredients, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :preparation %><div data-tooltip-content="#markdown-info" class="glyphicon glyphicon-info-sign markdown-tooltip"></div>
    <%= form.text_area :preparation, id: :recipe_preparation, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
